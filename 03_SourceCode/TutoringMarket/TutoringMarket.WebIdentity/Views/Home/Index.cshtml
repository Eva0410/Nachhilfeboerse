<body style="background-color:#E8E8E8;">            
    
    <div class="greenBack">
        <h1 class="index">
            Liste
            <em class="index">aller Tutoren</em>
        </h1>

        <div>
            @if (ViewContext.HttpContext.User.IsInRole("Visitor"))
            {
                <button class="teacherButton" type="button"
                        onclick="location.href='@Url.Action("GetTutor", "Home")'">
                    Werde auch du Tutor
                </button>
            }

            @if (ViewContext.HttpContext.User.IsInRole("Tutor"))
            {
                <a style="text-decoration:none;" class="teacherButton" asp-action="EditTutor">Tutorprofil ändern</a>
            }
        </div>

    </div>

    <form asp-action="index">
        <div class="col-md-6 col-sm-6" id="blackFilter1">
            <h3 id="h3filterFach">Fach</h3>

            <!--<input asp-for="@Model.SortText" type="submit" value="Schulstufe" />
            <input asp-for="@Model.SortText" type="submit" value="Geld" />
            <input asp-for="@Model.SortText" type="submit" value="Bewertung" />-->


            <select asp-for="@Model.SelectedSubject" asp-items="@Model.Subjects"></select>
            <input class="btn btn-default" style="margin-bottom:5px; margin-top:5px; padding: 0px 5px 0px 5px;" type="submit" value="Filtern" />
            <input type="hidden" asp-for="SortTextBefore" />
            @Html.HiddenFor(t => t.SortTextBefore)
        </div>
    </form>

    <div class="col-md-6 col-sm-6 whiteBox">

        <h3 id="h3borderTutor">Liste aller Tutoren</h3>

        @foreach (var item in @Model.Tutors)
        {
            <div class="teacher">
                <a style="text-decoration: none; color: #505050;" asp-action="TutorDetails" asp-route-id="@item.Id">
                    <center><h3 class="h3border">@item.FirstName @item.LastName</h3></center>
                    <label>Abteilung:</label> @item.Department.Name <br />
                    <label>Klasse:</label> @item.Class.Name <br />
                    <label>Termine:</label> @item.Time <br />
                    <label>Fächer:</label>
                    @foreach (var item2 in item.Subjects)
                    {
                        <div style="display:inline;">@item2.Name ;</div>
                    }
                </a>
            </div>
        }
       
        @if(Model.Tutors == null || Model.Tutors.Count == 0)
        {
            <div style="margin:10px 10px 10px 10px;">Es wurden keine Tutoren gefunden...</div>
        }

    </div>

    
</body>
