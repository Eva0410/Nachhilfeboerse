@model TutoringMarket.WebIdentity.Models.EmailFormModel
@{
    ViewData["Title"] = "Contact";
}

<nav class="navbar navbar-default" role="navigation" style="background-color:#313131">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle x collapsed" data-toggle="collapse" data-target="#navbar-collapse-x">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a style="color: white;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nachhilfebörse</a>
    </div>

    <div style="margin-top: 15px;" class="collapse navbar-collapse" id="navbar-collapse-x">
        <ul class="nav navbar-nav navbar-right">
            <li data-toggle="collapse" data-target="#navbar-collapse.in">@await Html.PartialAsync("_LoginPartial")</li>
        </ul>
        <ul>
            @if (ViewContext.HttpContext.User.IsInRole("Admin"))
            {
                <li style="margin-left: -15px; margin-top: -15px;"><a asp-action="AdministrationArea">Administrationsbereich</a></li>
            }
        </ul>
    </div>
</nav>


<body>
    <h1 class="page-header">Kontaktiere uns</h1>

    <div class="motivationNew2">
        <center>
            <h1 id="quote">
                We can't solve your Problem if you don't tell us about it.
            </h1>
        </center>
    </div> <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        
    <div class="contact">
        <div class="form-group">
            @Html.LabelFor(m => m.FromName, new { @class = "col-md-6 control-label" })
            <div class="col-md-6" style="margin-bottom:5px;">
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FromName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-6 control-label" })
            <div class="col-md-6" style="margin-bottom:5px;">
                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FromEmail)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Nachricht, new { @class = "col-md-6 control-label" })
            <div class="col-md-6" style="margin-bottom:5px;">
                @Html.TextAreaFor(m => m.Nachricht, new { @class = "form-control" })
                <p style="color:red;">@Html.ValidationMessageFor(m => m.Nachricht)</p>
                <br />
            </div>
            
            <div class="col-md-12">
                <p>Bitte füllen Sie alle Felder wahrheitsgemäß aus und versuchen Sie ihr Problem möglichst klar zu beschreiben um möglichst schnell eine Antwort zu bekommen.</p>
            <p style="color:red;">@Html.ValidationMessage("Error")</p>
            </div>
                

            <div class="col-md-12">

                <input type="submit" class="btn btn-default" value="Senden" />
            </div>
            
               
        </div>
    </div>
       
    }
</body>
