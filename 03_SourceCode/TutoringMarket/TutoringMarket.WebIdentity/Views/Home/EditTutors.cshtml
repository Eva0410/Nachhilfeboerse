<body>
    <!--<form asp-action="EditTutors">-->
    <h1 class="page-header">Ausstehende Tutoren</h1>

    <div id="edittutors">
        @foreach (var item in Model.OutstandingTutors)
        {
            <div class="row">
                <div class="col-md-1">@item.FirstName </div>
                <div class="col-md-1">@item.LastName </div>
                <div class="col-md-1">@item.Class.Name </div>
                <div class="col-md-1">
                    @foreach (var sub in item.Subjects)
                    {
                        @sub.Name<br />
                    }
                </div>
                <div class="col-md-1"><a asp-action="EditTutorsAccept" asp-route-id="@item.Id" onclick="return confirm('Wollen Sie den Tutor \'@item.FirstName @item.LastName\' wirklich akzeptieren?');">Akzeptieren</a></div>
                <div class="col-md-1"><a asp-action="EditTutorsDelete" asp-route-id="@item.Id" onclick="return confirm('Wollen Sie den Tutor \'@item.FirstName @item.LastName\' wirklich löschen?');">Löschen</a></div><br />
            </div>
        }
        <a class="btn btn-default" asp-action="AdministrationArea">Zurück</a>
    </div>
        
           
