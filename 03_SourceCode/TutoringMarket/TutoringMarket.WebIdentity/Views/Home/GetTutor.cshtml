<body>

    <div class="navbar-fixed-top" style="background-color:#313131">
        <div class="navbar-collapse collapse">
            <ul>
                <a style="color: white;" class="navbar-brand">Nachhilfebörse</a>
                <li><a asp-area="" asp-controller="" asp-action="Login">Log In</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Contact" class="selected">Kontaktiere uns</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Index"> Index</a></li>
            </ul>
        </div>
    </div>

    <h1 class="page-header">Werde Nachhilfelehrer</h1>


    <div align="center">
        <form class="anfrageForm" accept-charset="UTF-8" method="post">

            <div style="width:10.5cm">
                <input type="text" placeholder="Vorname*" class="form-control">
                <br />
            </div>


            <div style="width:10.5cm">
                <input type="text" placeholder="Nachname*" class="form-control">
                <br />
            </div>


            <div style="width:10.5cm">
                <input type="number" placeholder="Handynummer*" class="form-control">
                <br />
            </div>

            <div style="width:10.5cm">

                <br />
                <textarea type="text" placeholder="Beschreibung*" class="form-control2"></textarea>

                <p class="test">Motivationsspruch / Beschreibung</p>
            </div>

            <label for="file">Upload Image:</label>
            <input type="file" name="file" id="file" style="width: 100%;" />
            <input type="submit" value="Upload" class="submit" />
            <br/>
            <br/>
            <footer><a href="#" class="myButton">Einreichen</a></footer>

        </form>
    </div>
</body>