@using Microsoft.AspNetCore.Identity
@using TutoringMarket.WebIdentity.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-right">
            <li>
                <div style="margin-left: 15px; color:white;" asp-action="Index" title="Manage">Hallo @UserManager.GetUserName(User)!</div>
            </li>
            <li>
                <button style ="margin-top: -7px;"type="submit" class=" btn btn-link navbar-btn navbar-link">Ausloggen</button>
            </li>
        </ul>
    </form>
}
