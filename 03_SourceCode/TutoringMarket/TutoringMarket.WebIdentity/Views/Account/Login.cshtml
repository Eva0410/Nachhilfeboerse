@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager



<nav class="navbar navbar-default" role="navigation" style="background-color:#313131">
    <div class="navbar-header">
        <a style="color: white;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nachhilfebörse</a>
    </div>
    <div class="navbar-header navbar-right">
        <a style="color: white; font-size: 20px;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Program of support</a>
    </div>
</nav>

<head>

    <script language="JavaScript">
        function schreiben() {
            var r_text = new Array();
            r_text[0] = "When you feel like quitting think about why you started";
            r_text[1] = "You only fail when you stop trying";
            r_text[2] = "Be somebody nobody thought you could be";
            r_text[3] = "You didn't come this far to only come this far";
            r_text[5] = "Do what you can with all you have, wherever you are";
            r_text[6] = "Sometimes you win sometimes you learn";
            var i = Math.floor(7 * Math.random());
            document.write(r_text[i]);
        }
    </script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        var images = new Array();
        images[0] = "winter1.jpg";
        images[1] = "winter4.jpg";
        images[2] = "winter5.jpg";
        images[3] = "winter6.jpg";
        images[4] = "sommer1.jpg";
        images[5] = "sommer2.jpg";
        images[6] = "sommer3.jpg";
        images[7] = "sommer4.jpg";
        $('body').css({ 'background': 'url(../images/' + images[Math.floor(Math.random() * images.length)] + ')' });
        document.body.style.backgroundSize = "cover";
    </script>

</head>

<body id="loginbackground">
        
        <div class="col-md-3 col-sm-3" id="motivation">
            <center>
                <h1 id="quote">
                    <script type="text/javascript">schreiben()</script>
                </h1>
            </center>
        </div>

        <div class="col-md-6 col-sm-6" id="right"> <!--loginFormular-->
                
            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">

                    <center><h1 class="htl" style="color: white;">Willkommen bei der <br> Nachhilfebörse <br> HTL-Leonding</h1></center>       
                            
                    <div align="center">
                        <div class="form-group">
                                <input placeholder="Anmeldename" asp-for="UserName" class="form-control" style="width:11cm;"/>
                        </div>

                        <div class="form-group">                               
                                <input placeholder="Passwort" asp-for="Password" class="form-control" style="width:11cm;"/>
                        </div>
                                
                        <div class="form-group">
                            <div style="text-decoration: none;">
                                <button type="submit" class="ghost-button">Einloggen</button>
                            </div>

                            <div  style="margin-left:22%; color:orangered" asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                </form>
            </section>
        </div>

        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        }
    </body>